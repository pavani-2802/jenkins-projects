pipeline {
  agent {
    docker {
      image 'my-maven-docker:latest'
      // Mount Docker socket for communication.
      args '-v /var/run/docker.sock:/var/run/docker.sock'
      
      // *** FIX: Run the container with the host Jenkins user's UID/GID ***
      // This ensures all files created in the workspace belong to the host user
      // and can be cleaned up successfully.
      user '117:129' // Use the specific UID (117) and GID (129) seen in your logs
    }
  }
  
  environment {
      DOCKER_IMAGE = "pavanif5/jenkins-projects:${BUILD_NUMBER}"
      SONAR_CRED_ID = 'sonarqube'
      DOCKER_CRED_ID = 'docker-cred'
      GITHUB_CRED_ID = 'github'
      POM_PATH = 'java-maven-sonar-argocd-helm-k8s/spring-boot-app/pom.xml'
      APP_DIR = 'java-maven-sonar-argocd-helm-k8s/spring-boot-app'
  }

  // Use the cleanWs option provided by the Workspace Cleanup plugin for an automated solution
  // options {
  //     cleanWs()
  // }

  stages {
    // Keep this initial cleanup stage for robustness, even with the UID fix applied.
    stage('Initial Cleanup') {
      steps {
        sh '''#!/bin/bash
          echo "Forcefully removing stale target directory before checkout."
          # This command *should* succeed now that the container runs with the correct user
          rm -rf "${WORKSPACE}/${APP_DIR}/target" || true 
        '''
      }
    }

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build and Test') {
      steps {
        sh '''#!/bin/bash
          set -e
          cd "${WORKSPACE}/${APP_DIR}"
          echo "Running mvn clean package"
          # All files created by this command will now be owned by user 117:129
          mvn -B clean package
        '''
      }
    }
    
    stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://192.168.41.130:9000"
      }
      steps {
        withCredentials([string(credentialsId: env.SONAR_CRED_ID, variable: 'SONAR_AUTH_TOKEN')]) {
          sh '''#!/bin/bash
            set -e
            cd "${WORKSPACE}/${APP_DIR}"
            echo "Running Sonar analysis"
            mvn -B sonar:sonar -Dsonar.login=${SONAR_AUTH_TOKEN} -Dsonar.host.url="${SONAR_URL}"
          '''
        }
      }
    }
    
    stage('Build and Push Docker Image') {
      steps {
        script {
          sh '''#!/bin/bash
            set -e
            # Docker build commands must run as a user that can access the Docker daemon socket
            docker build -t "${DOCKER_IMAGE}" -f "${APP_DIR}/Dockerfile" "${APP_DIR}"
          '''
          docker.withRegistry('index.docker.io', env.DOCKER_CRED_ID) {
            def builtImage = docker.image(env.DOCKER_IMAGE)
            builtImage.push()
            def latestImageName = "${env.DOCKER_IMAGE%:*}:latest"
            builtImage.tag(latestImageName)
            builtImage.push(latestImageName)
          }
        }
      }
    }
    
    stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "jenkins-projects"
            GIT_USER_NAME = "pavani-2802"
            GIT_USER_EMAIL = "pavanikethari.28@gmail.com"
            DEPLOY_FILE_PATH = "${WORKSPACE}/java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml"
        }

        steps {
            withCredentials([string(credentialsId: env.GITHUB_CRED_ID, variable: 'GITHUB_TOKEN')]) {
                sh '''#!/bin/bash
                  set -e
                  git config user.email "${GIT_USER_EMAIL}"
                  git config user.name "${GIT_USER_NAME}"

                  sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" "${DEPLOY_FILE_PATH}"

                  if git diff --quiet -- "${DEPLOY_FILE_PATH}"; then
                    echo "No changes to ${DEPLOY_FILE_PATH}; skipping commit/push"
                  else
                    git add "${DEPLOY_FILE_PATH}"
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                    git push "https://${GITHUB_TOKEN}@github.com{GIT_USER_NAME}/${GIT_REPO_NAME}.git" HEAD:main
                  fi
                '''
            }
        }
    }
  }
  post {
    always {
      echo "Post-build cleanup of target directory (should work now):"
      // This final cleanup should now successfully delete all files created during the build.
      sh "rm -rf ${WORKSPACE}/${APP_DIR}/target || true"
    }
    failure {
      echo "Build failed diagnostics:"
      sh '''#!/bin/bash
        echo "Target folder listing (post-cleanup attempt):"
        ls -la "${WORKSPACE}/${APP_DIR}/target" || true
      '''
    }
  }
}
